{% extends 'base.html.twig' %}

{% block javascripts %}
{{ parent() }}
    <script src="{{ asset('styles/javascript/login.js') }}" defer></script>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
   <link rel="stylesheet" href="{{ asset('styles/css/form.css') }}?v=1.0">
{% endblock %}

{% block body %}       
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">
            {{ flash_error }}
        </div>
    {% endfor %}
    
    <div class="container">
        <div class="form_area">
            <h2>INSCRIPTION</h2>
            {{ form_start(registrationForm) }}
                <!-- Username field -->
                <div class="form_group">
                    <label class="sub_title" for="username">Ton identifiant :</label>
                    {{ form_widget(registrationForm.username, {
                        'attr': {'class': 'form_style', 'id': 'username'}
                    }) }}
                </div>
                
                <!-- Email field -->
                <div class="form_group">
                    <label class="sub_title" for="email">Ton adresse mail (pour te joindre) :</label>
                    {{ form_widget(registrationForm.email, {
                        'attr': {'class': 'form_style', 'id': 'email'}
                    }) }}
                </div>
                
                <!-- Password field -->
                <div class="form_group">
                    <label class="sub_title" for="password">Ton mot de passe :</label>
                    <div class="input-with-icon">
                        {{ form_widget(registrationForm.plainPassword, {
                            'attr': {'class': 'form_style password-input', 'id': 'password'}
                        }) }}
                        <img src="{{ asset('images/eye.png') }}" alt="masquer/afficher le mot de passe" id="image_mdp">
                    </div>
                    Le mot de passe doit faire 6 caractères minimum
                </div>
                
                <!-- Submit Button -->
                <div>
                    <button type="submit" class="btn">Créer</button>
                </div>
            {{ form_end(registrationForm) }}
                                <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous ici !</a></p>
        </div>
    </div>
{% endblock %}